{
  "name": {
    "en": "Lumineo",
    "nl": "Lumineo"
  },
  "images": {
    "large": "drivers/lumineo/assets/images/large.jpg",
    "small": "drivers/lumineo/assets/images/small.jpg"
  },
  "class": "light",
  "capabilities": [
    "onoff",
    "dim",
    "mode"
  ],
  "capabilitiesOptions": {
    "mode": {
      "title": {
        "en": "mode",
        "de": "Modus",
        "nl": "effect"
      },
      "showTitle": true
    }
  },
  "energy": {
    "approximation": {
      "usageOn": 6,
      "usageOff": 1.5
    }
  },
  "mobile": {
    "components": [
      {
        "id": "icon",
        "capabilities": [
          "onoff"
        ]
      },
      {
        "id": "slider",
        "capabilities": [
          "dim"
        ]
      },
      {
        "id": "picker",
        "capabilities": [
          "mode"
        ],
        "options": {
          "title": {
            "en": "mode",
            "de": "Modus",
            "nl": "effect"
          },
          "showTitle": true
        }
      }
    ]
  },
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "settings": [
    {
      "type": "group",
      "label": {
        "en": "Random mode",
        "de": "Zufallsmodus",
        "nl": "Willekeurig effect"
      },
      "children": [
        {
          "id": "wave",
          "type": "checkbox",
          "value": true,
          "label": {
            "en": "Wave",
            "de": "Impuls",
            "nl": "Golven"
          }
        },
        {
          "id": "phase",
          "type": "checkbox",
          "value": true,
          "label": {
            "en": "Phase",
            "de": "Stufe",
            "nl": "Faseren"
          }
        },
        {
          "id": "phasedFadeAway",
          "type": "checkbox",
          "value": true,
          "label": {
            "en": "Phased fade",
            "de": "stufenweise ausblenden",
            "nl": "Fase vervagen"
          }
        },
        {
          "id": "phasedTwinkle",
          "type": "checkbox",
          "value": true,
          "label": {
            "en": "Phased twinkle",
            "de": "stufenweise blinken",
            "nl": "fase twinkel"
          }
        },
        {
          "id": "fadeAway",
          "type": "checkbox",
          "value": true,
          "label": {
            "en": "Fade away",
            "de": "ausblenden",
            "nl": "Vervagen"
          }
        },
        {
          "id": "fastTwinkle",
          "type": "checkbox",
          "value": true,
          "label": {
            "en": "Fast Twinkle",
            "de": "schnell blinken",
            "nl": "Snel twinkel"
          }
        },
        {
          "id": "stayOn",
          "type": "checkbox",
          "value": true,
          "label": {
            "en": "Stay on",
            "de": "kontinuierlich leuchten",
            "nl": "Continu aan"
          }
        }
      ]
    }
  ]
}